<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" sizes="16x16" href="{{ defaultInfo.favicon }}">
    <title>{{ defaultInfo.title }}</title>
    <meta name="description" content="{{ defaultInfo.og_description }}">
    <meta name="keyword" content="{{ defaultInfo.keyword }}">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content="{{ defaultInfo.og_title }}">
    <meta property="og:url" content="{{ defaultInfo.og_url }}">
    <meta property="og:type" content="website">
    <meta property="og:image" content="http://nolraun.co.kr{{ defaultInfo.og_image }}">
    <meta property="og:site_name" content="{{ defaultInfo.og_title }}">
    <meta property="og:description" content="{{ defaultInfo.og_description }}">
    {{ defaultInfo.add_meta | safe }}

    <link rel="stylesheet" href="/static/dist/css/main.css">

    {{ defaultInfo.add_script | safe }}
</head>
<body>


<h1>{{ defaultInfo.title }}</h1>
{% if not loginUser %}
    <a href={{ routes.accounts + routes.login }}>로그인</a>
    <a href={{ routes.accounts + routes.signup }}>회원가입</a>
{% else %}
    <a href={{ routes.mypage }}>마이페이지</a>
    <a href={{ routes.accounts + routes.logout }}>로그아웃</a>
    {% if loginUser.role === 'admin' or loginUser.role === 'manager'  %}
        <a href={{ routes.admin }}>관리자사이트</a>
    {% endif %}
{% endif %}
<a href="/qna">1:1 문의</a>

<hr>
{% block content %}
{% endblock %}

{% include './footer.njk' %}

<script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
        crossorigin="anonymous"></script>
<script src="/static/common/common.js"></script>
{% block script %}
{% endblock %}
</body>
</html>
